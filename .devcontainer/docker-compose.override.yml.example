# ═══════════════════════════════════════════════════════════════════════════════
# WFC DevContainer - Custom Volume Mounts (Example)
# ═══════════════════════════════════════════════════════════════════════════════
#
# This file is automatically generated by setup.sh
#
# You can also create it manually:
#   1. Copy this file to docker-compose.override.yml
#   2. Update the paths to your local project folders
#   3. Restart the container: docker compose down && docker compose up -d
#
# ═══════════════════════════════════════════════════════════════════════════════

services:
  app:
    volumes:
      # Main application code (your project)
      - /path/to/your/project:/workspace/app:cached

      # Additional repositories (other projects, libraries)
      # - /path/to/library:/workspace/repos/my-lib:cached
      # - /path/to/another-project:/workspace/repos/other:cached

      # Temporary folder for scratch work (optional)
      # - /path/to/tmp:/workspace/tmp:cached

      # ────────────────────────────────────────────────────────
      # Workspace Structure:
      # /workspace/app/       - Your main application code
      # /workspace/repos/     - Other repositories (WFC, libraries)
      # /workspace/tmp/       - Temporary/scratch files
      # ────────────────────────────────────────────────────────

      # Example mounts:
      # - ~/code/myapp:/workspace/app:cached
      # - ~/code/shared-utils:/workspace/repos/utils:cached
      # - ~/Documents/tmp:/workspace/tmp:cached

# WFC Production Environment Configuration
# Copy to .env.prod and fill in your values

# Environment
ENV=production
LOG_LEVEL=warn

# Domain Configuration
PROD_DOMAIN=wfc.example.com
ACME_EMAIL=admin@example.com

# API Configuration
WORKERS=4

# Security
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD
TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$CHANGE_ME  # Generate with: htpasswd -nb admin password

# SSL/TLS
ACME_CA_SERVER=https://acme-v02.api.letsencrypt.org/directory  # Production
# ACME_CA_SERVER=https://acme-staging-v02.api.letsencrypt.org/directory  # Staging (for testing)

# Rate Limiting
TRAEFIK_RATE_LIMIT_AVG=200
TRAEFIK_RATE_LIMIT_BURST=100

# Scaling
WFC_API_REPLICAS=3

# Monitoring
PROMETHEUS_RETENTION=30d

# Alerting (optional)
ALERT_EMAIL=alerts@example.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
